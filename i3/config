            statusline #93A1A1
            separator  #586E75

            focused_workspace  #073642 #073642 #93A1A1
            active_workspace   #073642 #073642 #93A1A1
            inactive_workspace #073642 #002B36 #586E75
            urgent_workspace   #073642 #DC322F #93A1A1
            binding_mode       #073642 #DC322F #93A1A1
        }
}

